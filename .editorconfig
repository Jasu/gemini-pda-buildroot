root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[fstab]
indent_style = tab
indent_size = 8

[Makefile]
indent_style = tab
indent_size = 8

[*.{c,h,dts,mk,in}]
indent_style = tab
indent_size = 8

[gemini_pda_defconfig]
trim_trailing_whitespace = false
